<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_good_habits_10"
    android:fitsSystemWindows="true"
    tools:context="com.example.arthur.goodhabits.QuizActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/quiz_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <android.support.v4.view.ViewPager
        android:id="@+id/quiz_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/quiz_toolbar"
        android:layout_above="@+id/quiz_view_pager_indicator"
        android:layout_marginBottom="@dimen/view_pager_indicator_margin_vertical"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/quiz_view_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/view_pager_indicator_margin_vertical"
        app:fillColor="@android:color/white"
        app:pageColor="@color/view_pager_indicator_page"
        app:strokeColor="@android:color/transparent"
        app:gapWidth="@dimen/view_pager_indicator_gap_width"
        app:radius="@dimen/view_pager_indicator_radius" />

</RelativeLayout>
